//WAP to check whether  a number prime or not

#include <iostream>
using namespace std;

int main() {
    int N, sum = 0;

    // Ask the user for input
    cout << "Enter a positive integer: ";
    cin >> N;

    // Validate the input
    if (N < 1) {
        cout << "Please enter a positive integer greater than 0.";
        return 1;
    }

    // Calculate the sum of natural numbers up to N
    for (int i = 1; i <= N; i++) {
        sum += i;
    }

    // Output the result
    cout << "The sum of natural numbers up to " << N << " is: " << sum << endl;

    return 0;
}
